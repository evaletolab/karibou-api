doctype html
html
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name='robots', content='index,follow')
    title: |Karibou.ch - Le premier marché participatif de Suisse ... livrés à votre porte!
    meta(name="title", content="Karibou.ch - Le premier marché participatif de Suisse ... livrés à votre porte!")
    meta(charset="utf-8")
    meta(name="description",  content="Karibou.ch - Le premier marché participatif de Suisse ... livrés à votre porte!")
    meta(name="author", content="karibou team")
    link(rel="canonical", href="https://karibou.ch/")
    link(rel="icon", type="image/png", href="/img/k-small.png" )
    meta(property="og:type", content="website")
    if category && category.cover
      meta( property="og:url", content="https://karibou.ch/products/category/#{category.slug}" )
      meta( property="og:image", content="#{category.cover}-/resize/600x/" )
      meta( property="og:image:width", content="600")
    else
      meta(property="og:image", content="/img/hello-home.jpg")
    meta(property="og:title", content="karibou.ch")
    meta(property="og:description", content="Karibou.ch - Le premier marché participatif de Suisse ... livrés à votre porte!" )
    meta(property="og:site_name", content="Karibou.ch")
    meta(property="og:url", content="https://Karibou.ch")
    meta(name="twitter:site", content="@kariboulab")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css")
